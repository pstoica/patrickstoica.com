      .title-container {
        display: block;
        width: 100%;
        font-weight: 300;
        font-family: Rubik, -apple-system, ui-sans-serif, sans-serif;
      }

      :global(html) {
        @apply bg-zinc-900 text-zinc-300;
      }

      a {
        @apply text-pink-300;
        text-decoration: none;
        position: relative;
      }

      a:not(.title-container) {
        outline: none;

        &::after {
          content: "";
          position: absolute;
          width: 100%;
          height: 2px;
          bottom: -2px;
          left: 0;
          background: linear-gradient(
            45deg,
            #ff69b4,
            #8a2be2,
            #1e90ff,
            #ffd700,
            /* TODO figure out if i can increase density without duplication later */
              #ff69b4,
            #8a2be2,
            #1e90ff,
            #ffd700,
            #ff69b4
          );
          /* Adjust the background-size to make the gradient denser */
          /* You can modify this value to change the density */
          background-size: 200% 100%;
          opacity: 0;
          transform-origin: bottom right;
          transition: opacity 0.3s ease-out;
          /* Adjust the animation duration to match the new background-size */
          animation: gradientMove 3s linear infinite;
          mask-image: linear-gradient(
            to right,
            transparent,
            black 20%,
            black 80%,
            transparent
          );
          -webkit-mask-image: linear-gradient(
            to right,
            transparent,
            black 20%,
            black 80%,
            transparent
          );
        }

        &:hover::after,
        &:focus::after {
          opacity: 1;
        }
      }

      @keyframes gradientMove {
        0% {
          background-position: 0% 50%;
        }
        100% {
          /* Ensure the animation completes a full cycle */
          background-position: 200% 50%;
        }
      }

      .rainbow-underline {
        position: relative;
        display: inline-block;
      }

      .rainbow-underline::after,
      .rainbow-underline::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -4px;
        left: 0;
        background: linear-gradient(
          45deg,
          #ff69b4,
          #8a2be2,
          #1e90ff,
          #ffd700,
          #ff69b4,
          #8a2be2,
          #1e90ff,
          #ffd700,
          #ff69b4
        );
        background-size: 200% 100%;
        opacity: 1;
        transform-origin: bottom right;
        animation: gradientMove 6s linear infinite;
        mask-image: linear-gradient(
          to right,
          transparent,
          transparent 20%,
          black 50%,
          transparent 80%,
          transparent
        );
        -webkit-mask-image: linear-gradient(
          to right,
          transparent,
          transparent 20%,
          black 50%,
          transparent 80%,
          transparent
        );
      }

      .rainbow-underline::before {
        top: 0;
        transform: rotate(180deg);
        transform-origin: top center;
      }
    </style>

