  // New animation script
  const svg = document.getElementById("titleSvg");
  const circle1 = document.getElementById("circle1");
  const circle2 = document.getElementById("circle2");

  let mouseX = 0;
  let mouseY = 0;

  function animate() {
    const boundingRect = svg!.getBoundingClientRect();
    const centerX = boundingRect.width / 2;
    const centerY = boundingRect.height / 2;

    const distanceX = (mouseX - centerX) / centerX;
    const distanceY = (mouseY - centerY) / centerY;

    const time = Date.now() * 0.001;

    const cx1 = 30 + Math.sin(time * 0.7) * 20 + distanceX * 10;
    const cy1 = 50 + Math.cos(time * 0.5) * 15 + distanceY * 10;
    circle1!.setAttribute("cx", `${cx1}%`);
    circle1!.setAttribute("cy", `${cy1}%`);

    const cx2 = 70 + Math.cos(time * 0.6) * 15 - distanceX * 10;
    const cy2 = 50 + Math.sin(time * 0.8) * 20 - distanceY * 10;
    circle2!.setAttribute("cx", `${cx2}%`);
    circle2!.setAttribute("cy", `${cy2}%`);

    requestAnimationFrame(animate);
  }

  document.addEventListener("mousemove", (event) => {
    mouseX = event.clientX;
    mouseY = event.clientY;
  });

  animate();

  // Update noise filter
  const noiseFilter = document.querySelector("#noiseOffset");
  let noiseX = 0;
  let noiseY = 0;

  function updateNoise() {
    const loopPeriod = 200; // Adjust this value to change the loop size

    noiseX = (noiseX + 0.5) % loopPeriod;
    noiseY = (noiseY + 0.3) % loopPeriod;

    const dx = Math.sin((noiseX * Math.PI * 2) / loopPeriod) * 10;
    const dy = Math.cos((noiseY * Math.PI * 2) / loopPeriod) * 10;

    noiseFilter!.setAttribute("dx", dx.toString());
    noiseFilter!.setAttribute("dy", dy.toString());

    requestAnimationFrame(updateNoise);
  }

  updateNoise();
</script>
